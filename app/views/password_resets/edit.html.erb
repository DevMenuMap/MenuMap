<div class="container mm-field">
	<div class="col-md-8 col-md-offset-2">
		<div class="col-md-10 col-md-offset-1">
			
			<h1 id="mm-field-h1">이 세상 모든 메뉴판이 검색되는 그날까지
				<span class="mm-logo-font">MenuMap</span>
			</h1>
			<legend id="mm-field-legend">비밀번호 재설정</legend>

			<%= form_for(@user, url: password_reset_path(params[:id]) ) do |f| %>
				<%= render 'shared/error_messages' %>

				<%= hidden_field_tag :email, @user.email %>

				<%= f.label :password, "비밀번호", class: "control-label" %>
				<%= f.password_field :password, class: "form-control" %>

				<%= f.label :password_confirmation, "비밀번호 확인", class: "control-label" %>
				<%= f.password_field :password_confirmation, class: "form-control" %>

				<%= f.submit "확인", class: "btn btn-primary mm-btn-orange" %>
			<% end %>
		</div>
	</div>
</div>

