<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			
			<h2>로그인</h2>
			<%= form_for(:session, url: login_path) do |f| %>

				<%= f.label :email, "이메일(ID)", class: "control-label" %>
				<%= f.email_field :email, class: "form-control" %>

				<%= f.label :password, "비밀번호", class: "control-label" %>
				<%= f.password_field :password, class: "form-control" %>

				<%= f.submit "로그인", class: "btn btn-primary btn-orange" %>
			<% end %>

			<%= link_to "회원가입", signup_path %>	
		</div>
	</div>
</div>
