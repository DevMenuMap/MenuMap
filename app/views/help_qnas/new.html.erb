<div class="container mm-field">
	<div class="col-md-8 col-md-offset-2">
		<div class="col-md-10 col-md-offset-1">
				
				<h1 id="mm-field-h1">이 세상 모든 메뉴판이 검색되는 그날까지
					<span class="mm-logo-font">MenuMap</span>
				</h1>
				<legend id="mm-field-legend">help page 등록</legend>
				<%= form_for(:help_qna, url: help_qnas_path ) do |f| %>
					<%= f.label :help_title, "제목", class: "control-label" %>
					<%= f.text_field :help_title, class: "form-control" %>

					<%= f.label :help_contents, "내용", class: "control-label" %>
					<%= f.text_area :help_contents, class: "form-control", size: "30x10" %>

					<%= f.submit "등록", class: "btn btn-primary mm-btn-orange" %>
				<% end %>
				
		</div>
	</div>
</div>
