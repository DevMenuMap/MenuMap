<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			
			<h2>회원가입</h2>
			<%= form_for(:user, url: signup_path) do |f| %>
				<%= render 'shared/error_messages' %>

				<%= f.label :email, "이메일(ID)", class: "control-label" %>
				<%= f.email_field :email, class: "form-control" %>

				<%= f.label :username, "닉네임", class: "control-label" %>
				<%= f.text_field :username, class: "form-control" %>

				<%= f.label :password, "비밀번호", class: "control-label" %>
				<%= f.password_field :password, class: "form-control" %>

				<%= f.label :password_confirmation, "비밀번호 확인", 
																										class: "control-label" %>
				<%= f.password_field :password_confirmation, class: "form-control" %>

				<%= f.submit "회원가입", class: "btn btn-primary btn-orange" %>
			<% end %>

		</div>
	</div>
</div>
