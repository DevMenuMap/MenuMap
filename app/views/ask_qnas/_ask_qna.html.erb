<!-- Modal -->
<div class="modal fade" id="AskQnaModal" tabindex="-1" role="dialog"> 
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="ask-qna-modal-h4">
					<span class="mm-logo-font">MenuMap</span> 질문하기
				</h4>
      </div>

			<%= form_for(:ask_qna, url: ask_qnas_path) do |f| %>

				<div class="modal-body">
					<%= f.label :qna_user, "이메일(ID)", class: "control-label" %>

					<% if current_user %>
						<%= f.text_field :qna_user, value: "#{current_user.email}", 
																				class: "form-control", readonly: true %>
					<% else %>
						<%= f.text_field :qna_user, class: "form-control" %>
					<% end %>

					<%= f.label :qna_contents, "질문사항", class: "control-label" %>
					<%= f.text_area :qna_contents, class: "form-control", size: "30x10" %>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default mm-btn-dark-grey" data-dismiss="modal">취소</button>
					<%= f.submit "질문", class: "btn btn-primary mm-btn-orange" %>
				</div>

			<% end %>
    </div>
  </div>
</div>
