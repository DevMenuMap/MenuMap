<!-- main_btn_group -->
<div id="mm-main-btn-group">
	<div class="btn-group btn-group-justified">
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn1" data-parent="#mm-show-info"> 
				<span class="glyphicon glyphicon-list-alt"></span>상세 정보
			</button>
		</div>
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn2" data-parent="#mm-show-info"> 
				<span class="glyphicon glyphicon-picture"></span>사진 보기
			</button>
		</div>
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn3" data-parent="#mm-show-info"
																										onclick="loadGoogleMaps()">
				<span class="glyphicon glyphicon-map-marker"></span>지도 확인
			</button>
		</div>
	</div>

	<div id="mm-show-info" class="panel-group">
		<div class="panel"> 
			<!-- restaurant's detail -->
			<div id="mm-show-btn1" class="collapse">
				<div class="row">
					<div class="col-xs-3">
						상세 주소 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.addr %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-3">
						주요 상권 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.rest_info.title_addr %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-3">
						사장님 한 줄 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.rest_info.owner_intro %>
					</div>
				</div>
			</div>

			<!--- restaurant's images -->
			<div id="mm-show-btn2" class="collapse">
				<% if @restaurant.picture.present? %>
					<div id="mm-carousal">
						<%= image_tag @restaurant.picture.url(:big_size), 
																				class: "img-rounded" %>
					</div>
				<% else %>
					<p> 등록된 사진이 없습니다.<br />사진을 등록해주세요.</p>
				<% end %>

				<div class="row">
					<div class="col-xs-10 col-xs-offset-1">
						<button type="button" class="btn btn-block btn-primary"
																data-toggle="modal" data-target="#rest-img-modal">
							메뉴판, 음식점 사진 등록하기<span class="glyphicon glyphicon-upload"></span>
						</button>
					</div>
				</div>
			</div>

			<!-- modal for restaurant images -->
			<div class="modal fade" id="rest-img-modal" tabindex="-1" role="dialog"> 
				<div class="modal-dialog">
					<div class="modal-content">

						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title" id="rest-err-modal-h4">
								<span class="mm-logo-font">MenuMap</span> 음식점 사진 등록
							</h4>
						</div>

						<div class="modal-body">
							<h4>body</h4>
						</div>

						<div class="modal-footer">
							<button type="button" class="btn btn-default mm-btn-dark-grey" data-dismiss="modal">취소</button>
						</div>

					</div>
				</div>
			</div>

			<script>
			/*
				$('#mm-rest-err-img-btn').click(function() {
					$('input[id=report_rest_err_rest_err_img]').click();
				});

				$('input[id=report_rest_err_rest_err_img]').change(function() { 
