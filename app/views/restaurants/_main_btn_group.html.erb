<!-- main_btn_group -->
<div id="mm-main-btn-group">
	<div class="btn-group btn-group-justified">
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn1" data-parent="#mm-show-info"> 
				<span class="glyphicon glyphicon-list-alt"></span>상세 정보
			</button>
		</div>
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn2" data-parent="#mm-show-info"> 
				<span class="glyphicon glyphicon-picture"></span>사진 보기
			</button>
		</div>
		<div class="btn-group">
			<button type="button" class="btn btn-default" data-toggle="collapse"
												data-target="#mm-show-btn3" data-parent="#mm-show-info"
																										onclick="loadGoogleMaps()">
				<span class="glyphicon glyphicon-map-marker"></span>지도 확인
			</button>
		</div>
	</div>

	<div id="mm-show-info" class="panel-group">
		<div class="panel"> 
			<!-- restaurant's detail -->
			<div id="mm-show-btn1" class="collapse">
				<div class="row">
					<div class="col-xs-3">
						상세 주소 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.addr %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-3">
						주요 상권 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.rest_info.title_addr %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-3">
						사장님 한 줄 :
					</div>
					<div class="col-xs-9">
						<%= @restaurant.rest_info.owner_intro %>
					</div>
				</div>
			</div>

			<!--- restaurant's images -->
			<div id="mm-show-btn2" class="collapse">
				<% if @restaurant.picture.present? %>
					<div id="mm-carousal">
						<%= image_tag @restaurant.picture.url(:big_size), 
																				class: "img-rounded" %>
					</div>
				<% else %>
					<p> 등록된 사진이 없습니다.<br />사진을 등록해주세요.</p>
				<% end %>

				<div class="row">
					<div class="col-xs-10 col-xs-offset-1">
						<button type="button" class="btn btn-block btn-primary"
																data-toggle="modal" data-target="#rest-img-modal">
							메뉴판, 음식점 사진 등록하기<span class="glyphicon glyphicon-upload"></span>
						</button>
					</div>
				</div>
			</div>

			<!-- google maps -->
			<div id="mm-show-btn3" class="collapse">
				<div id="mm-gm">
					<div id="map-canvas"></div>
				</div>
				<div class="hidden" id="restaurant_address"><%= @restaurant.addr %></div>
				<div class="hidden" id="restaurant_name"><%= @restaurant.name %></div>
			</div>
		</div>
	</div>
</div>
